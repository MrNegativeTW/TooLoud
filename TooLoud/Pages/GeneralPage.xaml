<Page x:Class="TooLoud.Pages.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TooLoud.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:controls="clr-namespace:TooLoud.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralPage">

    <controls:ScrollViewerEx>
        <StackPanel Margin="20,10">
            <GroupBox Header="Section Title 1">
                <ui:SimpleStackPanel Spacing="10">
                    
                    <ui:ToggleSwitch Header="開機自動啟動" />
                    
                    <ui:SimpleStackPanel Spacing="10" HorizontalAlignment="Left" Orientation="Horizontal">
                        <Slider ui:ControlHelper.Header="最大音量"
                            Minimum="0" Maximum="100" HorizontalAlignment="Left"
                            AutoToolTipPlacement="TopLeft" Width="240"
                            IsMoveToPointEnabled="True" Value="50" />
                        <!--<TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                               VerticalAlignment="Center" Margin="0,22,0,0">
                            <Run Text="{Binding Path=UIManager.FlyoutBackgroundOpacity, StringFormat={}{0:#0}%}" />
                        </TextBlock>-->
                    </ui:SimpleStackPanel>
                </ui:SimpleStackPanel>
            </GroupBox>

            <GroupBox Header="Section Title 2">
            </GroupBox>
        </StackPanel>
    </controls:ScrollViewerEx>
</Page>
