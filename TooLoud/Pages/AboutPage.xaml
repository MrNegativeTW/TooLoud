<Page x:Class="TooLoud.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TooLoud.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:controls="clr-namespace:TooLoud.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">

    <controls:ScrollViewerEx>
        <ui:SimpleStackPanel Spacing="10" Margin="20">
            <TextBlock FontWeight="SemiBold" Style="{DynamicResource TitleTextBlockStyle}"
                        Text="TooLoud" />
            <Image Source="/Assets/Logo.ico" HorizontalAlignment="Left" Height="72" />
            <TextBlock TextWrapping="Wrap" Text="Fuck Logitech" />
            <TextBlock>
                <!-- <Run Text="{x:Static resx:Strings.About_Version}" /> -->
                <TextBlock TextWrapping="Wrap" Text="Version: 1.0.0" />
                <Bold>
                    <!-- <Run Text="{x:Static local:Program.AppVersion}" -->
                </Bold>
            </TextBlock>
            <ui:HyperlinkButton Content="GitHub"
                    NavigateUri="https://github.com/MrNegativeTW/TooLoud" />
        </ui:SimpleStackPanel>
    </controls:ScrollViewerEx>
</Page>
